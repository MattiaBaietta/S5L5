<form asp-controller="Trasgressori" asp-action="Add" method="post" class="mt-5">
    <h3>Inserisci dati nuovo Trasgressore:</h3>
    <div class="form-group">
        <label>Cognome:</label>
        <input type="text" name="Cognome" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nome:</label>
        <input type="text" name="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label>Indirizzo:</label>
        <input type="text" name="Indirizzo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Città:</label>
        <input type="text" name="Citta" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cap:</label>
        <input type="number" name="Cap" class="form-control" />
    </div>
    <div class="form-group">
        <label>Codice Fiscale:</label>
        <input type="text" name="Cod_Fisc" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Aggiungi Trasgressore</button>
</form>
